<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <LangVersion>9</LangVersion>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>Luv2Code.Encryptor</PackageId>
        <PackageVersion>1.0.2</PackageVersion>
        <Title>Luv2Code.Encryptor</Title>
        <Authors>Luv2Code.Net</Authors>
        <Description>Decrypts and encryps string values with a secret key. You can use this library to encrypt connection strings, personal passwords etc. This library is using the Aes hash method.</Description>
        <Copyright>Â©Luv2Code 2021</Copyright>
        <RepositoryUrl>https://github.com/Luv2CodeDotNet/Luv2Code.Encryptor.git</RepositoryUrl>
        <RepositoryType>Library</RepositoryType>
        <PackageLicenseUrl>https://github.com/Luv2CodeDotNet/Luv2Code.Encryptor/tree/master/LICENSE</PackageLicenseUrl>
    </PropertyGroup>
    <PropertyGroup>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <DocumentationFile>bin\Release\Encryptor.xml</DocumentationFile>
    </PropertyGroup>
</Project>
